<div class="container">

  <div class="row">
    <div class="col-md-12">
      <img src="/assets/img/burger.png" alt="burger" class="img-responsive center-block">
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center text-danger">Eat-Da-Burger!</h1>
    </div>
  </div>

  <div class="row">

    {{!-- Uneaten burgers column --}}
    <div class="col-md-5">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-uneaten}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    {{!-- Eaten burgers column --}}
    <div class="col-md-5 col-md-offset-2">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-eaten}}
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <br />
  <br />
  
  {{!-- Add a burger --}}
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">

      <form class="create-form">
        <div class="form-group">
          <textarea type="text" class="form-control" id="ca" name="name"></textarea>
          <br />
          <button class="btn btn-primary" type="submit">Submit</button>
          <p>Enter a burger you want to eat.<br>Click the "Submit" button</p>
        </div>
      </form>

    </div>

  </div>

</div>